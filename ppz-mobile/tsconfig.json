{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "features/*": ["features/*/index", "features/*"],
      "components/*": ["components/*/index", "components/*"],
      "types/*": ["types/*/index", "types/*"],
      "store/*": ["store/*/index", "store/*"],
      "utils/*": ["utils/*/index", "utils/*"],
      "providers/*": ["providers/*/index", "providers/*"],
    },
  },
  "exclude": ["node_modules", "babel.config.js"]
}
